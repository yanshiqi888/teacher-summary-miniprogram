<!-- 班主任工作计划 -->
<view class="container">
  <!-- 基本信息 -->
  <view class="card">
    <view class="section-title">基本信息</view>
    
    <view class="form-item">
      <view class="form-label"><text class="required">*</text>班级</view>
      <input 
        class="form-input" 
        placeholder="如：高一(3)班"
        value="{{formData.className}}"
        bindinput="onClassNameChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>学生人数</view>
      <input 
        class="form-input" 
        type="number"
        placeholder="请输入学生人数"
        value="{{formData.studentCount}}"
        bindinput="onStudentCountChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>学期</view>
      <input 
        class="form-input" 
        placeholder="如：2024-2025学年第二学期"
        value="{{formData.semester}}"
        bindinput="onSemesterChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>计划长度</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{lengthOptions}}"
        value="{{lengthIndex}}"
        bindchange="onLengthChange"
      >
        <view>{{lengthOptions[lengthIndex]}}</view>
      </picker>
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>写作风格</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{styleOptions}}"
        value="{{styleIndex}}"
        bindchange="onStyleChange"
      >
        <view>{{styleOptions[styleIndex]}}</view>
      </picker>
    </view>
  </view>

  <!-- 计划内容 -->
  <view class="card">
    <view class="section-title">计划内容（选填）</view>

    <view class="form-item">
      <view class="form-label">班级管理计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划调整班干部、完善班规、每周主题班会等"
        value="{{formData.management}}"
        bindinput="onManagementChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">德育工作计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划开展诚信教育、组织社会实践、主题教育活动等"
        value="{{formData.moral}}"
        bindinput="onMoralChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">学习指导计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划建立互助小组、开展学法指导、提升整体成绩等"
        value="{{formData.study}}"
        bindinput="onStudyChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">活动计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划组织春游、参加校运会、班级文化评比等"
        value="{{formData.activities}}"
        bindinput="onActivitiesChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">家校沟通计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划召开2次家长会、家访重点学生、加强家校联系等"
        value="{{formData.homeSchool}}"
        bindinput="onHomeSchoolChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">个别教育计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划重点关注后进生、定期谈心、建立成长档案等"
        value="{{formData.individual}}"
        bindinput="onIndividualChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">班风学风建设计划</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划营造竞争氛围、树立学习榜样、形成良好风气等"
        value="{{formData.atmosphere}}"
        bindinput="onAtmosphereChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">工作目标</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：班级纪律明显改善、学习成绩稳步提升等"
        value="{{formData.goals}}"
        bindinput="onGoalsChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">特别补充</view>
      <textarea 
        class="form-textarea" 
        placeholder="其他想要在计划中体现的内容，自由发挥"
        value="{{formData.extra}}"
        bindinput="onExtraChange"
      />
    </view>
  </view>

  <button class="btn-primary" bindtap="generatePlan">
    生成工作计划
  </button>
</view>
