page {
  background-color: #f5f5f5;
}

.tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.comment-list {
  margin-top: 30rpx;
}

.comment-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.comment-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.comment-index {
  font-size: 28rpx;
  font-weight: 600;
  color: #4A90E2;
}

.comment-actions {
  display: flex;
  gap: 16rpx;
}

.btn-small {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 6rpx;
}

.btn-copy-small {
  background: #52c41a;
  color: white;
}

.btn-regenerate {
  background: #f0f0f0;
  color: #666;
}

.comment-text {
  font-size: 30rpx;
  line-height: 2;
  color: #333;
  text-align: justify;
  letter-spacing: 1rpx;
}

.export-actions {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn-export {
  flex: 1;
  background: #4A90E2;
  color: white;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.btn-export-text {
  flex: 1;
  background: #52c41a;
  color: white;
  font-size: 28rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}
