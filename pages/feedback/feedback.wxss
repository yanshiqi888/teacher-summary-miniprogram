page {
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.header-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.sub-text {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.btn-primary {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
  margin-top: 20rpx;
}

.btn-primary:active {
  opacity: 0.8;
}

.success-card {
  text-align: center;
  padding: 60rpx 40rpx;
}

.success-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.success-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.success-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.btn-back {
  width: 100%;
  background: #4A90E2;
  color: white;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
}
