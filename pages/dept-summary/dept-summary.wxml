<!-- 科室工作总结 -->
<view class="container">
  <!-- 基本信息 -->
  <view class="card">
    <view class="section-title">基本信息</view>
    
    <view class="form-item">
      <view class="form-label"><text class="required">*</text>科室名称</view>
      <input 
        class="form-input" 
        placeholder="如：教务处、德育处等"
        value="{{formData.deptName}}"
        bindinput="onDeptNameChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>学期</view>
      <input 
        class="form-input" 
        placeholder="如：2023-2024学年第一学期"
        value="{{formData.semester}}"
        bindinput="onSemesterChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>总结长度</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{lengthOptions}}"
        value="{{lengthIndex}}"
        bindchange="onLengthChange"
      >
        <view>{{lengthOptions[lengthIndex]}}</view>
      </picker>
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>写作风格</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{styleOptions}}"
        value="{{styleIndex}}"
        bindchange="onStyleChange"
      >
        <view>{{styleOptions[styleIndex]}}</view>
      </picker>
    </view>
  </view>

  <!-- 工作内容 -->
  <view class="card">
    <view class="section-title">工作内容（选填）</view>

    <view class="form-item">
      <view class="form-label">关键事件</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：开3次教研会、组织期中期末考试、开展公开课等"
        value="{{formData.events}}"
        bindinput="onEventsChange"
      />
      <view class="tip">简单列举即可，AI 会自动扩展</view>
    </view>

    <view class="form-item">
      <view class="form-label">取得成绩</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：教学质量提升、教师获奖、学生成绩进步等"
        value="{{formData.achievements}}"
        bindinput="onAchievementsChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">存在问题</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：部分工作落实不到位、教研深度不够等"
        value="{{formData.problems}}"
        bindinput="onProblemsChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">改进建议</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：加强教研力度、完善管理制度等"
        value="{{formData.suggestions}}"
        bindinput="onSuggestionsChange"
      />
    </view>
  </view>

  <button class="btn-primary" bindtap="generateSummary">
    生成工作总结
  </button>
</view>
