page {
  background-color: #f5f5f5;
}

.container {
  padding: 30rpx;
}

.card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.content {
  font-size: 28rpx;
  line-height: 2;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.actions {
  display: flex;
  gap: 20rpx;
}

.btn-primary,
.btn-secondary {
  flex: 1;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  border: none;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}

.btn-secondary {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-primary:active,
.btn-secondary:active {
  opacity: 0.8;
}
