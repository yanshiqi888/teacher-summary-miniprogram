.container {
  min-height: 100vh;
  padding: 20rpx;
  background-color: #f5f5f5;
}

.content-card {
  background: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  min-height: 800rpx;
}

.content-text {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
  white-space: pre-wrap;
  word-break: break-all;
}

.actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx 40rpx;
}

.btn-export {
  flex: 1;
  background: #4A90E2;
  color: white;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
}

.btn-copy {
  flex: 1;
  background: #52c41a;
  color: white;
  font-size: 32rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  font-weight: 600;
}
