.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx 30rpx;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding-top: 40rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 16rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.function-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.function-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12);
  transition: all 0.3s;
}

.function-card:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.icon {
  font-size: 64rpx;
  margin-right: 24rpx;
}

.function-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.function-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.function-desc {
  font-size: 24rpx;
  color: #999;
}

.arrow {
  font-size: 48rpx;
  color: #ccc;
  font-weight: 300;
}
