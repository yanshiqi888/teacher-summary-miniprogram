<!-- 科室工作计划 -->
<view class="container">
  <!-- 基本信息 -->
  <view class="card">
    <view class="section-title">基本信息</view>
    
    <view class="form-item">
      <view class="form-label"><text class="required">*</text>科室名称</view>
      <input 
        class="form-input" 
        placeholder="如：教务处、德育处等"
        value="{{formData.deptName}}"
        bindinput="onDeptNameChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>学期</view>
      <input 
        class="form-input" 
        placeholder="如：2024-2025学年第二学期"
        value="{{formData.semester}}"
        bindinput="onSemesterChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>计划长度</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{lengthOptions}}"
        value="{{lengthIndex}}"
        bindchange="onLengthChange"
      >
        <view>{{lengthOptions[lengthIndex]}}</view>
      </picker>
    </view>

    <view class="form-item">
      <view class="form-label"><text class="required">*</text>写作风格</view>
      <picker 
        class="form-picker" 
        mode="selector" 
        range="{{styleOptions}}"
        value="{{styleIndex}}"
        bindchange="onStyleChange"
      >
        <view>{{styleOptions[styleIndex]}}</view>
      </picker>
    </view>
  </view>

  <!-- 计划内容 -->
  <view class="card">
    <view class="section-title">计划内容（选填）</view>

    <view class="form-item">
      <view class="form-label">计划活动</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：计划开展5次教研活动、组织教师培训、开展公开课等"
        value="{{formData.activities}}"
        bindinput="onActivitiesChange"
      />
      <view class="tip">简单列举即可，AI 会自动扩展</view>
    </view>

    <view class="form-item">
      <view class="form-label">工作目标</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：提升教学质量、加强教师队伍建设、完善管理制度等"
        value="{{formData.goals}}"
        bindinput="onGoalsChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">具体措施</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：定期开展教研、建立听课制度、加强过程管理等"
        value="{{formData.measures}}"
        bindinput="onMeasuresChange"
      />
    </view>

    <view class="form-item">
      <view class="form-label">时间安排</view>
      <textarea 
        class="form-textarea" 
        placeholder="如：3月开展教研月、5月组织期中考试等"
        value="{{formData.schedule}}"
        bindinput="onScheduleChange"
      />
    </view>
  </view>

  <button class="btn-primary" bindtap="generatePlan">
    生成工作计划
  </button>
</view>
